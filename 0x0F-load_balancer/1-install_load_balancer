#!/usr/bin/env bash

# Update system packages
sudo apt update
sudo apt upgrade -y

# Install HAProxy
sudo apt install -y haproxy

# Configure HAProxy
cat <<EOL | sudo tee /etc/haproxy/haproxy.cfg
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend myfrontend
    bind *:80
    default_backend mybackend

backend mybackend
    balance roundrobin
    server 421731-web-01 52.3.247.21:80 check
    server 421731-web-02 34.207.237.255:80 check
EOL

# Enable HAProxy service
sudo systemctl enable haproxy
sudo systemctl restart haproxy

# Ensure HAProxy can be managed via init script
sudo systemctl status haproxy

# Verify the configuration
curl -Is 127.0.0.1

# Output the configuration for verification
cat /etc/haproxy/haproxy.cfg
